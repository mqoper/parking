<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :full_name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :full_name, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :slack_register_id, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :slack_register_id, class: "form-control shadow rounded", placeholder: "Type some random code with 6 characters" %>
          </div>
        </div>

<!--        <div class="form-group row">-->
          <%#= f.label :slack_id, class: "col-2 col-form-label text-light" %>
<!--          <div class="col-10">-->
            <%#= f.text_field :slack_id, class: "form-control shadow rounded", placeholder: "Type some code" %>
<!--          </div>-->
<!--        </div>-->

        </br>
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
  </div>
</div>